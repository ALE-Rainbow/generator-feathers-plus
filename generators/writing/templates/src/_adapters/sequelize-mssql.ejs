const url = require('url')<%- sc %>
const Sequelize = require('sequelize')<%- sc %>
const { Op } = Sequelize<%- sc %>
const operatorsAliases = {
  $eq: Op.eq,
  $ne: Op.ne,
  $gte: Op.gte,
  $gt: Op.gt,
  $lte: Op.lte,
  $lt: Op.lt,
  $not: Op.not,
  $in: Op.in,
  $notIn: Op.notIn,
  $is: Op.is,
  $like: Op.like,
  $notLike: Op.notLike,
  $iLike: Op.iLike,
  $notILike: Op.notILike,
  $regexp: Op.regexp,
  $notRegexp: Op.notRegexp,
  $iRegexp: Op.iRegexp,
  $notIRegexp: Op.notIRegexp,
  $between: Op.between,
  $notBetween: Op.notBetween,
  $overlap: Op.overlap,
  $contains: Op.contains,
  $contained: Op.contained,
  $adjacent: Op.adjacent,
  $strictLeft: Op.strictLeft,
  $strictRight: Op.strictRight,
  $noExtendRight: Op.noExtendRight,
  $noExtendLeft: Op.noExtendLeft,
  $and: Op.and,
  $or: Op.or,
  $any: Op.any,
  $all: Op.all,
  $values: Op.values,
  $col: Op.col
}<%- sc %>

<%- tplExport('function (app) {', 'function app: App) {') %>
  const connectionString = app.get('mssql')<%- sc %>
  const connection = url.parse(connectionString)<%- sc %>
  const database = connection.path.substring(1, connection.path.length)<%- sc %>
  const { port, hostname } = connection<%- sc %>
  const [ username, password ] = (connection.auth || ':').split(':')<%- sc %>
  const sequelize = new Sequelize(database, username, password, {
    dialect: 'mssql',
    host: hostname,
    logging: false,
    operatorsAliases,
    define: {
      freezeTableName: true
    },
    dialectOptions: {
      port,
      instanceName: 'NameOfTheMSSQLInstance'
    }
  })<%- sc %>

  const oldSetup = app.setup<%- sc %>

  app.set('sequelizeClient', sequelize)<%- sc %>

  app.setup = function (...args) {
    const result = oldSetup.apply(this, args)<%- sc %>

    // Set up data relationships
    const models = sequelize.models<%- sc %>
    Object.keys(models).forEach(name => {
      if ('associate' in models[name]) {
        models[name].associate(models)<%- sc %>
      }
    })<%- sc %>

    // Sync to the database
    sequelize.sync()<%- sc %>

    return result<%- sc %>
  }<%- sc %>
}<%- sc %>
